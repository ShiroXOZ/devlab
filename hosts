---

#Hosts file contains the IP address for the routers on the network
#The format is in YML.
#Anisble connection would handle commands using command line. The network system would be ios which contains cisco modules.
#Providing the configuration with admin permisions and providing the user access when connecting through SSH.

routers:
  hosts:
    R1:
      ansible_host: 192.168.50.1
    R2:
      ansible_host: 192.168.2.2
    R3:
      ansible_host: 192.168.4.2
    R4:
      ansible_host: 192.168.77.1
  
  vars:
    ansible_connection: network_cli
    ansible_network_os: ios
    ansible_user: admin
    ansible_become: yes
    ansible_ssh_pass: "{{password}}"
    ansible_action_warnings: False
    ansible_become_method: enable
    ansible_become_password: "{{password}}"









